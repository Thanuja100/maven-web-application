pipeline {
  agent {
    docker {
      image 'node:10.15.0-alpine'
      args  '-p 3000:3000'
    }
 }
  stages {
    stage('clone the code') {
      step {
          sh 'git clone https://github.com/madhav411/Shell-Scripts.git'
     }
  }
    stage('build the code') {
      step {
          sh 'npx lerna bootstrap --scope xxxxxxxx'
          sh 'npx lerna run build --scope xxxxxxxx'
      }
    }
  }
}
